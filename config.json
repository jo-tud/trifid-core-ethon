{
  "baseConfig": "trifid-core:config.plugins.json",
  "logger": {
    "app": "trifid",
    "level": "debug"
  },
  "listener": {
    "port": 8080
  },
  "express": {
    "trust proxy": "loopback",
    "x-powered-by": null
  },
  "patchHeaders": {
    "root": {
      "static": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "public, max-age=120",
        "Vary": "Accept"
      }
    }
  },
  "mediaTypeUrl": {
    "root": {
      "formats": {
        "jsonld": "application/ld+json",
        "nt": "application/n-triples",
        "ttl": "text/turtle",
        "xml": "application/rdf+xml"
      }
    }
  },
  "rewrite": {
    "root": {
      "mediaTypes": [
        "application/html",
        "application/ld+json",
        "application/n-triples",
        "application/rdf+xml",
        "application/xhtml+xml",
        "text/html",
        "text/turtle"
      ],
      "rewriteContent": true,
      "rewriteHeaders": true
    }
  }
}